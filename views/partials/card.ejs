<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= word %></h5>
    <p class="sub-title">Definition:</p>
    <ul class="content">
      <li class="word--text"><%= definition[0] %></li>
    </ul>
    <% if (synomyms != '') { %>
    <p class="sub-title">Synonyms:</p>
    <ul class="content">
      <li class="word--text"><%= synomyms %></li>
    </ul>
    <% } %>
    <div class="d-flex">
      <button
        class="more-info"
        data-bs-toggle="modal"
        data-bs-target="#detailedInfo"
        value="<%= origin %>,<%= index %>"
        onclick="sendData(this)"
      >
        Read more
      </button>
      <% if(id){ %>
      <span class="ms-auto mt-2 me-2"><%= id %></span>
      <% } %>
    </div>
  </div>
</div>

